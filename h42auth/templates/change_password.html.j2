{% extends "base-page.html.j2" %}

{% block body %}
<div class="row">
  <div class="col-lg-12">
    <form action="" method="post" autocomplete="off">
      {{ form.hidden_tag() }}
      <div class="form-group">
        {{ form.password_old.label }}<br>
        {{ form.password_old(size=32, class_="form-control", placeholder="Entre the password, the old one !") }}
      </div>
      <div class="form-group">
        {{ form.password_new.label }}<br>
        {{ form.password_new(size=32, class_="form-control", placeholder="Enter password") }}
      </div>
      <div class="form-group">
        {{ form.password_check.label }}<br>
        {{ form.password_check(size=32, class_="form-control", placeholder="Enter password, one time again, the last sure !") }}
      </div>
      <button type="submit" class="btn btn-warning"><i class="fas fa-key"></i> Change Password</button>
    </form>
  </div>
</div>
{% endblock %}
